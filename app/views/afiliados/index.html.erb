<%- model_class = Afiliado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:codigo) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:apellido) %></th>
      <th><%= model_class.human_attribute_name(:genero) %></th>
      <th><%= model_class.human_attribute_name(:edad) %></th>
      <th><%= model_class.human_attribute_name(:estado_civil) %></th>
      <th><%= model_class.human_attribute_name(:string) %></th>
      <th><%= model_class.human_attribute_name(:tipo_id) %></th>
      <th><%= model_class.human_attribute_name(:no_id) %></th>
      <th><%= model_class.human_attribute_name(:direccion1) %></th>
      <th><%= model_class.human_attribute_name(:direccion2) %></th>
      <th><%= model_class.human_attribute_name(:ciudad) %></th>
      <th><%= model_class.human_attribute_name(:municipio) %></th>
      <th><%= model_class.human_attribute_name(:departamento) %></th>
      <th><%= model_class.human_attribute_name(:pais) %></th>
      <th><%= model_class.human_attribute_name(:actividad) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @afiliados.each do |afiliado| %>
      <tr>
        <td><%= link_to afiliado.id, afiliado_path(afiliado) %></td>
        <td><%= afiliado.codigo %></td>
        <td><%= afiliado.nombre %></td>
        <td><%= afiliado.apellido %></td>
        <td><%= afiliado.genero %></td>
        <td><%= afiliado.edad %></td>
        <td><%= afiliado.estado_civil %></td>
        <td><%= afiliado.string %></td>
        <td><%= afiliado.tipo_id %></td>
        <td><%= afiliado.no_id %></td>
        <td><%= afiliado.direccion1 %></td>
        <td><%= afiliado.direccion2 %></td>
        <td><%= afiliado.ciudad %></td>
        <td><%= afiliado.municipio %></td>
        <td><%= afiliado.departamento %></td>
        <td><%= afiliado.pais %></td>
        <td><%= afiliado.actividad %></td>
        <td><%=l afiliado.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_afiliado_path(afiliado), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      afiliado_path(afiliado),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_afiliado_path,
            :class => 'btn btn-primary' %>
